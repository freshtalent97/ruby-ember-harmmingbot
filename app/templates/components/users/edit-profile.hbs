{{#bootstrap/bs-modal id=modalId onClose=(action "onClose") as |modal|}}
  {{#modal.header class="modal-header-navbar"}}
    {{users/edit-profile/header user=user
      tab=tab
      onError=(action (mut errorMessage))
      onChange=(action (mut tab))}}
  {{/modal.header}}

  {{#modal.body}}
    {{users/edit-profile/body user=user
      tab=tab
      externalData=externalData
      onError=(action (mut errorMessage))
      addRecord=(action "addRecord")
      removeRecord=(action "removeRecord")}}
  {{/modal.body}}

  {{#modal.footer}}
    {{users/edit-profile/footer errorMessage=errorMessage
      isDirty=isDirty
      updateTask=updateProfileTask
      transition=(action "transitionToSettings")
      onUpdate=(action "hideModal")}}
  {{/modal.footer}}
{{/bootstrap/bs-modal}}
